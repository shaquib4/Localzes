<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
   >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtStaffSection"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="#de4500"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="Income Section"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="@dimen/_15ssp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCOD"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"
                android:layout_below="@id/txtStaffSection"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_add_item">

                    <ImageView
                        android:id="@+id/imgStaff"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_cod_pay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgStaff"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="COD"
                        android:textColor="#000"
                        android:textSize="@dimen/_20ssp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardPAYTM"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"
                android:layout_below="@id/cardCOD"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_add_item">

                    <ImageView
                        android:id="@+id/imgOrder"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/paytm" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgOrder"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="PAYTM"
                        android:textColor="#000"
                        android:textSize="@dimen/_20ssp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRAZORPAY"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"
                android:layout_below="@id/cardPAYTM"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_add_item">

                    <ImageView
                        android:id="@+id/imgStaffs"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_120sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_razorpay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgStaffs"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="ONLINE PAY"
                        android:textColor="#000"
                        android:textSize="@dimen/_20ssp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>