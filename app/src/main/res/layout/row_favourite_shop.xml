<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_3sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:elevation="0dp"
                app:cardCornerRadius="10dp"
              android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:id="@+id/cardImage"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                android:id="@+id/imgItem"
                android:scaleType="fitXY"
                android:src="@drawable/localze_shop"
                />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_toStartOf="@+id/cardFavourite"
                android:id="@+id/txtShopName"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="#666666"
                android:layout_alignTop="@+id/cardImage"
                android:fontFamily="@font/montserrat_bold"
                android:layout_toEndOf="@+id/cardImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electronics Shop"/>

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@+id/cardImage"
                android:layout_toStartOf="@+id/cardFavourite"
              android:layout_below="@id/txtShopName"
                android:id="@+id/txtShopAddress"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="#d1d1d1"
                android:fontFamily="@font/montserrat_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="47/118B Durgakund, Gaziabad UP - 228800"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardFavourite"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp">

            <ImageView
                android:padding="@dimen/_5sdp"
                android:id="@+id/imgFavourite"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/ic_favourite"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>