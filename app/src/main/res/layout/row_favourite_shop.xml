<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardImage"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/imgItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/localze_shop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cardImage"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toStartOf="@+id/cardFavourite"
                android:layout_toEndOf="@+id/cardImage"
                android:fontFamily="@font/montserrat_bold"
                android:text="Electronics Shop"
                android:textColor="#666666"
                android:textSize="@dimen/_11ssp" />

            <TextView
                android:id="@+id/txtShopAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtShopName"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toStartOf="@+id/cardFavourite"
                android:layout_toEndOf="@+id/cardImage"
                android:fontFamily="@font/montserrat_medium"
                android:text="47/118B Durgakund, Gaziabad UP - 228800"
                android:textColor="#d1d1d1"
                android:textSize="@dimen/_10ssp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardFavourite"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_15sdp">

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgFavourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_favourite" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>