<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/email_ui"
    android:orientation="vertical">
<RelativeLayout
    android:id="@+id/rl_Register"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_70sdp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/register_as_customer"
        android:textColor="#de4500"
        android:textSize="@dimen/_20ssp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/edtregName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_30sdp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/create_your_account"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <EditText
        android:maxLines="1"
        android:id="@+id/edtregName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_above="@id/edtregemail"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/stroke"
        android:fontFamily="@font/montserrat_medium"
        android:drawableStart="@drawable/ic_outline_person_24"
        android:hint="@string/enter_your_full_name"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="@dimen/_12ssp"

        android:inputType="text"
        android:importantForAutofill="no" />

    <EditText

        android:id="@+id/edtregemail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_above="@id/btnReg"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/stroke"
        android:drawableStart="@drawable/ic_outline_email_24"
        android:hint="@string/enter_your_email"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="@dimen/_12ssp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:importantForAutofill="no" />


    <Button
        android:id="@+id/btnReg"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_60sdp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/montserrat_bold"
        android:padding="7dp"
        android:text="@string/proceed"
        android:textAllCaps="false"
        android:textColor="#DE0606"
        android:textSize="@dimen/_15ssp" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_retryRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lost"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtOhNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/oh_no"
            android:textSize="@dimen/_20ssp" />


        <TextView
            android:id="@+id/txtLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOhNo"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/no_internet_connection"
            android:textSize="@dimen/_15ssp" />


        <TextView
            android:id="@+id/txtInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLost"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/please_connect_to_internet"
            android:textSize="@dimen/_15ssp" />

        <Button
            android:id="@+id/retryRegister"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/stroke"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingHorizontal="@dimen/_30sdp"
            android:text="@string/retry"
            android:textColor="#de4500"
            android:textSize="@dimen/_15ssp" />


    </RelativeLayout>

</RelativeLayout>