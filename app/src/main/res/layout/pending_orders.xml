<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcfcfc">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txtPendingOrders"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#de4500"
                android:padding="10dp"
                android:text="Pending Orders"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_pending" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardProduct1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/txtPendingOrders"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgProduct1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/lanju" />

                    <ImageView
                        android:id="@+id/imgBorder1"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:background="#f1f1f1"
                        android:layout_height="1dp"
                        android:layout_marginTop="100dp"/>

                    <TextView
                        android:id="@+id/txtProductName1"
                        android:textColor="#000000"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Name"/>

                    <TextView
                        android:textColor="#696969"
                        android:layout_marginTop="35dp"
                        android:layout_marginStart="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 items"/>

                    <TextView
                        android:id="@+id/orderAmountTv"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:layout_marginTop="55dp"
                        android:layout_marginStart="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. 499"/>

                    <TextView
                        android:id="@+id/orderIdTv"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Id #142197"/>

                    <TextView

                        android:layout_margin="10dp"
                        android:id="@+id/txtCod1"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_alignRight="@id/orderIdTv"
                        android:background="@drawable/bg_add_item"
                        android:layout_below="@id/orderIdTv"
                        android:textColor="#de4500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COD"/>
                    <TextView
                        android:id="@+id/orderDateTv"
                        android:padding="5dp"
                        android:layout_margin="10dp"
                        android:textSize="15sp"
                        android:layout_alignRight="@+id/orderIdTv"
                        android:textColor="#696969"
                        android:layout_below="@+id/imgBorder1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/01/2021, 3:45 PM"/>

                    <TextView
                        android:id="@+id/orderStatusTv"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        android:background="@drawable/rectangle_box"
                        android:layout_below="@id/imgBorder1"
                        android:textColor="#ff0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CANCELED"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>