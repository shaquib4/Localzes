        <RelativeLayout
            android:id="@+id/rl_Home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navProducts"
            android:layout_below="@id/category"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imgEmpty"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_empty" />

            <TextView
                android:id="@+id/noProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgEmpty"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/sorry_no_shops_found_in_your_city"
                android:textColor="#696969"
                android:textSize="@dimen/_12ssp" />
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_shop_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_navProducts"
            android:layout_below="@+id/category"
            android:layout_marginTop="1dp"
            android:padding="2dp"
            android:visibility="gone"
            app:stackFromEnd="true"
            tools:listitem="@layout/shop_single_customer" />

        <RelativeLayout
            android:id="@+id/progress_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fcfcfc"
            android:visibility="invisible">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/progress_bar2"
                android:indeterminateDuration="@android:integer/config_longAnimTime" />

        </RelativeLayout>

        <Button
            android:elevation="@dimen/_20sdp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:id="@+id/switchButtonHome"
            android:layout_height="@dimen/_25sdp"
            android:layout_above="@id/bottom_navProducts"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round2_btn"
            android:fontFamily="@font/montserrat_bold"
            android:paddingHorizontal="3dp"
            android:text="@string/switch_screen"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="@dimen/_12ssp" />

