<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Welcome to Localze !"
            android:textColor="#de4500"
            android:textSize="@dimen/_13ssp" />

        <ImageView
            android:id="@+id/imgScan"
            android:layout_margin="5dp"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/qr_scan" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/imgScan"
            android:background="#d3d3d3" />

        <HorizontalScrollView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:scrollbars="none">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgAll"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/ic_baseline_category_24" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgAll"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="All"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgGrocery"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/grocery" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgGrocery"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Grocery"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgFood"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/food" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgFood"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Food"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgElectronics"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/electronics" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgElectronics"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Electronics"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgFashion"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/fashion" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgFashion"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Fashion"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgMobiles"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/mobiles" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgMobiles"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Mobiles"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgHome"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/home" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgHome"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Home"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgBeauty"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/beauty" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgBeauty"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Beauty"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgAppliances"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/appliances" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgAppliances"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Appliances"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgToys"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/toys" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgToys"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Toys &amp; Kids"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgSports"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/sports" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgSports"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Sports"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgBooks"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/books" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgBooks"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Books"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgAutomobiles"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/automobiles" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgAutomobiles"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Automobiles"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgFitness"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/fitness" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgFitness"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Fitness"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgHealth"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/health" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgHealth"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Healthcare"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgTravel"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/travel" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgTravel"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Travel"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">


                        <ImageView
                            android:id="@+id/imgGaming"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/gaming" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgGaming"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:text="Gaming"
                            android:textAlignment="center"
                            android:textColor="#0f0f0f"
                            android:textSize="@dimen/_10ssp" />
                    </RelativeLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/rl_Home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navProducts"
            android:layout_below="@id/category"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imgEmpty"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_empty" />

            <TextView
                android:id="@+id/noProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgEmpty"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Sorry! No shops found in your city "
                android:textColor="#696969"
                android:textSize="@dimen/_12ssp" />
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_shop_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_navProducts"
            android:layout_below="@+id/category"
            android:layout_marginTop="1dp"
            android:padding="2dp"
            android:visibility="gone"
            app:stackFromEnd="true"
            tools:listitem="@layout/shop_single_customer" />

        <RelativeLayout
            android:id="@+id/progress_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fcfcfc"
            android:visibility="invisible">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/progress_bar2"
                android:indeterminateDuration="@android:integer/config_longAnimTime" />

        </RelativeLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            app:menu="@menu/customer_menu" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_retry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lost"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtOhNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Oh No.."
            android:textSize="@dimen/_20ssp" />


        <TextView
            android:id="@+id/txtLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOhNo"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="No Internet Connection"
            android:textSize="@dimen/_20ssp" />


        <TextView
            android:id="@+id/txtConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLost"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Please connect to internet"
            android:textSize="@dimen/_15ssp" />

        <Button
            android:id="@+id/retry"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/stroke"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingHorizontal="@dimen/_30sdp"
            android:text="Retry"
            android:textColor="#de4500"
            android:textSize="@dimen/_15ssp" />


    </RelativeLayout>


</RelativeLayout>