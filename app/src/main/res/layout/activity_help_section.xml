<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HelpSectionActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_10sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#000"
            android:textSize="@dimen/_15ssp"
            android:id="@+id/txtContact"
            android:layout_toEndOf="@id/imgBack"
            android:layout_centerVertical="true"/>

        <view
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/rl2"
        android:layout_below="@id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#008000"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For any Help or Support, Contact Us !"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/txtHelp"/>

                <ImageView
                    android:layout_below="@id/txtHelp"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imgContact"
                    android:src="@drawable/contact"/>

                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d3d3d3"
                    android:layout_below="@id/imgContact"/>


                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d3d3d3"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@id/mobile3"/>

                <TextView
                    android:layout_below="@id/imgContact"
                    android:id="@+id/txtCallUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call Us"
                    android:textColor="#000"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/_20ssp"

                    android:layout_margin="@dimen/_10sdp"/>

                <ImageView
                    android:layout_below="@id/imgContact"
    android:layout_margin="@dimen/_10sdp"
                   android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_phone_24"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/img_call_us"
                    />

               <ImageView
                   android:layout_marginTop="@dimen/_10sdp"
                   android:id="@+id/imgCall"
                   android:layout_marginHorizontal="@dimen/_10sdp"
                   android:layout_below="@id/txtCallUs"
                   android:layout_width="@dimen/_40sdp"
                   android:layout_height="@dimen/_40sdp"
                   android:src="@drawable/call_us_icon"/>
                <TextView
                    android:layout_toRightOf="@id/imgCall"
                    android:layout_below="@id/img_call_us"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile1"
                    android:text="+91-8528436997"/>
                <TextView
                    android:layout_toRightOf="@id/imgCall"
                    android:layout_below="@id/mobile1"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile2"
                    android:text="+91-7518894470"/>
                <TextView
                    android:layout_toRightOf="@id/imgCall"
                    android:layout_below="@id/mobile2"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mobile3"
                    android:text="+91-7317544896"/>

                <View
                    android:id="@+id/v4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d3d3d3"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@id/email3"/>

                <TextView
                    android:layout_below="@id/v3"
                    android:id="@+id/txtEmailUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mail Us"
                    android:textColor="#000"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/_20ssp"

                    android:layout_margin="@dimen/_10sdp"/>

                <ImageView
                    android:layout_below="@id/v3"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_mail"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/img_email_us"
                    />

                <ImageView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/imgEmail"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_below="@id/txtEmailUs"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/call_us_icon"/>
                <TextView
                    android:layout_toRightOf="@id/imgCall"
                    android:layout_below="@id/img_email_us"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email1"
                    android:text="khanShaquib21@gmail.com"/>
                <TextView
                    android:layout_toRightOf="@id/imgCall"
                    android:layout_below="@id/email1"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email2"
                    android:text="ratnakarchaurasiya8@gmail.com"/>
                <TextView
                    android:layout_toRightOf="@id/imgCall"
                    android:layout_below="@id/email2"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email3"
                    android:text="ekagraagrawal49@gmail.com"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTeamMail"
                    android:text="Need Help! Mail to our team"
                    android:textColor="#000"
                    android:layout_margin="@dimen/_10sdp"
                    android:textSize="@dimen/_15ssp"
                    android:layout_below="@id/v4"
                    android:fontFamily="@font/montserrat_bold"/>

                <ImageView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@id/txtTeamMail"
                    android:id="@+id/imgMail"
                    android:src="@drawable/ic_email"/>

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="localzeteam@gmail.com"
                    android:layout_below="@+id/txtTeamMail"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="#0000ff"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/txtWebsite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/_20ssp"
                    android:textColor="#000"
                    android:layout_below="@id/imgMail"
                    android:layout_margin="@dimen/_10sdp"
                    />

                <TextView
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_alignBottom="@id/txtWebsite"
                    android:id="@+id/txtLink"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.localze.com"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="#0000ff"/>

                <view
                    android:layout_below="@id/txtWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d3d3d3"
                    android:id="@+id/v5"/>

                <ImageView
                    android:layout_below="@id/txtConnect"
                    android:layout_toLeftOf="@+id/ic_gmail"
                    android:id="@+id/ic_browse"
                    android:padding="10dp"

                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/linkedin_logo"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    />

                <ImageView
                    android:layout_toLeftOf="@+id/ic_twitter"
                    android:id="@+id/ic_gmail"
                    android:layout_below="@id/txtConnect"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/gmail_logo"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    />
                <ImageView
                  android:id="@+id/ic_twitter"
                    android:layout_centerHorizontal="true"
                   android:layout_below="@id/txtConnect"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/twitter_logo"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    />
                <ImageView
                    android:layout_toRightOf="@id/ic_twitter"
                    android:id="@+id/ic_fb"
                    android:layout_below="@id/txtConnect"

                    android:src="@drawable/fb_logo"
                    android:padding="@dimen/_8sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    />

                <ImageView
                    android:layout_toRightOf="@id/ic_fb"
                    android:id="@+id/ic_ig"
                    android:layout_below="@id/txtConnect"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/ig_logo"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    />


                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/txtConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connet with us on Social Media"
                 android:layout_below="@id/v5"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="#000"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
   </RelativeLayout>
</ScrollView>