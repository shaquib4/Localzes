<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View

                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/cardShop"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/txtStaffShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v2"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Continue as Staff of Shop"
                android:textAlignment="center"
                android:textSize="@dimen/_15ssp" />

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txtStaffShop"
                android:background="#d3d3d3" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardShop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp">

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_220sdp">

                    <View

                        android:id="@+id/v4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#d3d3d3" />

                    <TextView
                        android:id="@+id/invi"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@+id/v4"
                        android:layout_marginStart="@dimen/_7sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Invitation"
                        android:textSize="@dimen/_15sdp" />

                    <View
                        android:id="@+id/v5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/invi"
                        android:background="#d3d3d3" />

                    <RelativeLayout
                        android:id="@+id/rl_Invitations"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/v5">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerInvitation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:visibility="gone"
                            tools:listitem="@layout/invitation_single_row" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_No_Invitations"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgEmpty"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_empty" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgEmpty"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="No invitations yet!"
                            android:textColor="#696969"
                            android:textSize="@dimen/_15ssp" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/rl_staff_of_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/v1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_staff_of"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:visibility="gone"
                    tools:listitem="@layout/staff_off" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_no_staff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/v1">

                <ImageView
                    android:id="@+id/imgEmpty1"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgEmpty1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="No shops make you staff yet!"
                    android:textColor="#696969"
                    android:textSize="@dimen/_15ssp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>