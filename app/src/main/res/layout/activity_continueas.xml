<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/continue_as"
    android:layout_height="match_parent">


    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:layout_marginTop="@dimen/_80sdp"/>

    <Button
        android:id="@+id/btnseller"
        android:layout_width="@dimen/_195sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@id/view1"
        android:layout_alignParentEnd="true"
        android:elevation="5dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/ic_seller_btn"
        android:fontFamily="@font/montserrat_bold"
        android:text="As Seller"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="@dimen/_14ssp" />

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btnCustomer"
        android:text="As Customer"
        android:textAllCaps="false"
        android:elevation="5dp"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#fff"
        android:layout_below="@id/view"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:background="@drawable/ic_customer_btn"
        android:layout_marginTop="@dimen/_60sdp"/>

    <Button
        android:id="@+id/deliver_btn"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:elevation="5dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/ic_seller_btn"
        android:fontFamily="@font/montserrat_bold"
        android:text="As Delivery Partner"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="@dimen/_14ssp" />
    <ProgressBar
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progress_bar2"
        android:indeterminateDuration="@android:integer/config_longAnimTime"
        android:id="@+id/progress_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
</RelativeLayout>