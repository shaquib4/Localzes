<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/continue_as"
    android:layout_height="match_parent">

<RelativeLayout
    android:id="@+id/rl_continueAs"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:text="@string/continue_1"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="@dimen/_18ssp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#fff"
        android:background="@drawable/border"
        />




    <Button
        android:layout_above="@+id/view"
        android:id="@+id/btnseller"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentEnd="true"
        android:elevation="5dp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        android:background="@drawable/proceed_to_add"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/as_seller"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="@dimen/_14ssp" />

    <View
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btnCustomer"
        android:text="@string/as_customer"
        android:layout_below="@id/view"
        android:textAllCaps="false"
        android:elevation="5dp"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#fff"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_35sdp"
android:layout_marginTop="@dimen/_50sdp"
        android:background="@drawable/proceed_to_add" />


    <ProgressBar
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/progress_bar2"
        android:indeterminateDuration="@android:integer/config_longAnimTime"
        android:id="@+id/progress_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_retryContinueAs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lost"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtOhNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/oh_no"
            android:textSize="@dimen/_15ssp" />


        <TextView
            android:id="@+id/txtLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOhNo"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/no_internet_connection"
            android:textSize="@dimen/_15ssp" />


        <TextView
            android:id="@+id/txtInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLost"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/please_connect_to_internet"
            android:textSize="@dimen/_15ssp" />

        <Button
            android:id="@+id/retryContinueAs"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/stroke"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingHorizontal="@dimen/_30sdp"
            android:text="@string/retry"
            android:textColor="#de4500"
            android:textSize="@dimen/_15ssp" />


    </RelativeLayout>
</RelativeLayout>