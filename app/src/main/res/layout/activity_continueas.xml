<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/reddish">

    <TextView
        android:id="@+id/localze"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Localze"
        android:textSize="50sp"
        android:textColor="#fff"
        android:fontFamily="@font/montserrat_bold"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="97dp"
        android:layout_marginRight="98.15dp"/>


    <Button
        android:id="@+id/btnCustomer"
        android:layout_width="334dp"
        android:layout_height="41dp"
        android:background="@drawable/round_button"
        android:textAllCaps="false"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="9.12dp"
        android:textSize="20sp"
        android:textColor="#D60606"
        android:fontFamily="@font/l_r"
        android:textDirection="ltr"
        android:textAlignment="textStart"
        android:text="Continue as customer"

        android:paddingLeft="32dp"
        android:includeFontPadding="true"
        android:drawablePadding="8dp"
        />
    <Button
        android:layout_width="334dp"
        android:layout_height="41dp"
        android:background="@drawable/round_button"
        android:textAllCaps="false"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="9.12dp"
        android:textSize="20sp"
        android:textColor="#D60606"
        android:fontFamily="@font/l_r"
        android:textDirection="ltr"
        android:textAlignment="textStart"
        android:text="Continue as Seller"

        android:paddingLeft="32dp"
        android:includeFontPadding="true"
        android:drawablePadding="14dp"
        />
    <Button
        android:layout_width="334dp"
        android:layout_height="41dp"
        android:background="@drawable/round_button"
        android:textAllCaps="false"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="9.12dp"
        android:textSize="20sp"
        android:textColor="#D60606"
        android:fontFamily="@font/l_r"
        android:textDirection="ltr"
        android:textAlignment="textStart"
        android:text="Be our delivery partner"

        android:paddingLeft="32dp"
        android:includeFontPadding="true"
        android:drawablePadding="8dp"
        />
    <ProgressBar
        android:id="@+id/progress_continue"
        android:layout_marginLeft="160dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>



</LinearLayout>