<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                android:id="@+id/txtshopNumberInvitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtshopOwnerNameInvitation"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/imgshop"
                android:fontFamily="@font/montserrat_medium"
                android:text="Mobile No. :"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txtshopOwnerNameInvitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopStaffNameInvitation"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/imgshop"
                android:fontFamily="@font/montserrat_medium"
                android:text="Shop Owner:"
                android:textSize="@dimen/_10ssp" />

            <TextView

                android:id="@+id/shopStaffNameInvitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/imgshop"
                android:fontFamily="@font/montserrat_bold"
                android:text="Electronics Shop"
                android:textColor="#de4500"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/shopOwnerNumberInvitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopOwnerNameInvitation"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/txtshopNumberInvitation"
                android:fontFamily="@font/montserrat_medium"
                android:text="9876543210"
                android:textColor="@color/green"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/shopOwnerNameInvitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopStaffNameInvitation"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/txtshopOwnerNameInvitation"
                android:fontFamily="@font/montserrat_bold"
                android:text="Katappa Mama"
                android:textColor="#3498db"
                android:textSize="@dimen/_10ssp" />


            <RelativeLayout
                android:id="@+id/imgshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/stroke_primary">


                <ImageView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_margin="1dp"
                    android:background="@drawable/stroke_primary"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shop_png" />
            </RelativeLayout>

            <Button
                android:id="@+id/acceptInvite"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/stroke_red"
                android:fontFamily="@font/montserrat_medium"
                android:text="Accept"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/RejectInvite"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_below="@id/acceptInvite"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/stroke_red"
                android:fontFamily="@font/montserrat_medium"
                android:text="Reject"
                android:textAllCaps="false" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>