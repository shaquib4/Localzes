<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_productDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fcfcfc"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtSellUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="#ffffff"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="EDIT PRODUCT DETAILS"
                    android:textColor="#de4500"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txtSellUpdate"
                    android:background="#d3d3d3" />

                <TextView
                    android:id="@+id/txtDetailsUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtSellUpdate"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="10dp"
                    android:text="PRODUCT DETAILS"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12ssp" />

                <ImageView
                    android:id="@+id/imgBorder1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/txtDetailsUpdate"
                    android:layout_marginBottom="10dp"
                    android:background="#f1f1f1" />

                <ImageView
                    android:id="@+id/imgBorder2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/linearLayout1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="#f1f1f1" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBanner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_below="@id/imgBorder1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/imageHintUpdate"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add_image" />

                    <ImageView
                        android:id="@+id/image_view_update"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardBanner"
                    android:weightSum="2">


                    <TextView
                        android:id="@+id/txtAddImageUpdate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:padding="10dp"
                        android:text="Add product images*"
                        android:textColor="#a0a0a0"
                        android:textSize="@dimen/_8ssp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etTittleUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_below="@id/linearLayout2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/textview_border"
                    android:fontFamily="@font/montserrat_medium"
                    android:hint="Product Name*"
                    android:inputType="text"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/etDescriptionUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_below="@id/etTittleUpdate"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/textview_border"
                    android:fontFamily="@font/montserrat_medium"
                    android:hint="Product Description (optional)"
                    android:inputType="text"
                    android:maxLength="300"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="@dimen/_10ssp" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgBorder2"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txtCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Choose Category"
                        android:textColor="#a0a0a0"
                        android:textSize="@dimen/_10ssp" />


                    <Spinner
                        android:id="@+id/sp_spinner_add_update"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_border"
                        android:entries="@array/Spinner_Item1"
                        android:textAlignment="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etDescriptionUpdate"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/etSellPriceUpdate"
                        android:layout_width="180dp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_border"
                        android:fontFamily="@font/montserrat_medium"
                        android:hint="MRP*"
                        android:inputType="number"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textColor="#de4500"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/etOfferPriceUpdate"
                        android:layout_width="180dp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_border"
                        android:fontFamily="@font/montserrat_medium"
                        android:hint="Selling Price*"

                        android:inputType="number"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textColor="#3498db"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnUpdateProduct"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_below="@+id/linearLayout5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/proceed_to_add"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="UPDATE PRODUCT"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/_12ssp" />

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout3"
                    android:weightSum="2">

                    <Spinner
                        android:id="@+id/sp_unit_update"
                        android:layout_width="180dp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_border"
                        android:entries="@array/Spinner_items"
                        android:textAlignment="center" />

                    <EditText
                        android:id="@+id/etQuantityUpdate"
                        android:layout_width="180dp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/textview_border"
                        android:fontFamily="@font/montserrat_medium"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:maxLength="5"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout4"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Stock"
                            android:textAlignment="center"
                            android:textSize="@dimen/_12ssp" />
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/radioStockCustomer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:text="IN" />

                        <RadioButton

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:text="OUT" />
                    </RadioGroup>

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
    <RelativeLayout
        android:id="@+id/rl_retryUpdateProductDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lost"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtOhNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Oh No.."
            android:textSize="@dimen/_20ssp" />


        <TextView
            android:id="@+id/txtLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOhNo"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="No Internet Connection"
            android:textSize="@dimen/_20ssp" />


        <TextView
            android:id="@+id/txtInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLost"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Please connect to internet"
            android:textSize="@dimen/_15ssp" />

        <Button
            android:id="@+id/retryUpdateProductDetail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/stroke"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingHorizontal="@dimen/_30sdp"
            android:text="Retry"
            android:textColor="#de4500"
            android:textSize="@dimen/_15ssp" />


    </RelativeLayout>
</RelativeLayout>