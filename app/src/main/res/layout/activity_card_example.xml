<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_270sdp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgElectronics"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:scaleType="fitXY"
                android:src="@drawable/shop" />

            <TextView
                android:id="@+id/txtElectronics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgElectronics"
                android:layout_marginStart="20dp"
                android:text="Elecronics Accessoies"
                android:textColor="#000000"
                android:textSize="@dimen/_15ssp" />

            <TextView
                android:id="@+id/txtVews1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgElectronics"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="Views: 722 "
                android:textColor="#696969"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVews1"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text="Stock: IN "
                android:textColor="#3498db"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txtPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtElectronics"
                android:layout_marginStart="20dp"
                android:text="Rs. 699"
                android:textColor="#de4500"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgBorder5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/txtPrice1"
                android:layout_margin="10dp"
                android:background="#696969" />

            <ImageView
                android:id="@+id/imgRating"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@id/imgBorder5"
                android:src="@drawable/ic_rating"
                android:layout_alignStart="@+id/txtVews1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_18sdp"
                android:textSize="@dimen/_15ssp"
                android:textColor="#de4500"
                android:layout_toEndOf="@id/imgRating"
                android:text="4.5/5"
                android:layout_below="@+id/imgBorder5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgBorder5"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:textColor="#ff0000"
                android:layout_marginStart="10dp"
                android:text="Opens at 9:00 AM"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>

