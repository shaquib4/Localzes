<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fcfcfc"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtSell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#de4500"
                android:padding="10dp"
                android:text="ADD PRODUCT"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtSell"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:text="PRODUCT DETAILS"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgBorder1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/txtDetails"
                android:layout_marginBottom="10dp"
                android:background="#f1f1f1" />

            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/imgBorder2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/linearLayout1"
                android:layout_marginBottom="10dp"
                android:background="#f1f1f1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_below="@id/imgBorder1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imageHint"
                    android:src="@drawable/ic_add_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/image_view"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:weightSum="2"
                android:id="@+id/linearLayout1"
                android:layout_below="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txtAddImage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:padding="10dp"
                    android:text="Add product images*"
                    android:textColor="#a0a0a0" />
            </LinearLayout>

            <EditText
                android:id="@+id/etTittle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_below="@id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/textview_border"
                android:hint="Product Name*"
                android:maxLength="50"
                android:maxLines="1"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/etDiscription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_below="@id/etTittle"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/textview_border"
                android:hint="Product Discription (optional)"
                android:maxLength="300"
                android:maxLines="1"
                android:textAlignment="center"
                android:textSize="18sp" />

            <LinearLayout
                android:weightSum="2"
                android:id="@+id/linearLayout2"
                android:layout_below="@+id/imgBorder2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Choose Category"
                    android:textColor="#a0a0a0"
                    android:textSize="18sp" />


                <Spinner
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:id="@+id/sp_spinner"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/textview_border"
                    android:entries="@array/Spinner_Item1"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:id="@+id/linearLayout3"
                android:layout_below="@id/etDiscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/etSellPrice"
                    android:layout_width="180dp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/textview_border"
                    android:hint="MRP*"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="#de4500"
                    android:textSize="18sp" />

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/etOfferPrice"
                    android:layout_width="180dp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/textview_border"

                    android:hint="Selling Price*"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="#3498db"
                    android:textSize="18sp" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_below="@+id/linearLayout4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/proceed_to_add"
                android:text="ADD PRODUCT"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <LinearLayout
                android:weightSum="2"
                android:id="@+id/linearLayout4"
                android:layout_below="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:id="@+id/sp_quantity"
                    android:layout_marginBottom="5dp"
                    android:layout_width="180dp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/textview_border"
                    android:entries="@array/Spinner_items"
                    android:textAlignment="center" />

                <EditText
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:id="@+id/etQuantity"
                    android:layout_width="180dp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/textview_border"
                    android:hint="Quantity"
                    android:layout_marginBottom="5dp"
                    android:inputType="number"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>