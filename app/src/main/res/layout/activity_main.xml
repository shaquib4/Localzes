<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edtmobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_above="@id/btnRegButton"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/stroke"
            android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
            android:fontFamily="@font/montserrat_medium"
            android:hint="@string/mobile_number"
            android:inputType="phone"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="@dimen/_12ssp"
            android:importantForAutofill="no" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edtmobile"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/login_or_sign_up_with_your_mobile_number"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/_12ssp" />

        <Button
            android:id="@+id/btnRegButton"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_100sdp"
            android:background="@drawable/round_button"
            android:fontFamily="@font/l_r"
            android:padding="7dp"
            android:text="@string/login_sign_up"
            android:textAllCaps="false"
            android:textColor="#DE0606"
            android:textSize="@dimen/_12ssp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_retryMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lost"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtOhNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/oh_no"
            android:textSize="@dimen/_15ssp" />


        <TextView
            android:id="@+id/txtLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_above="@id/txtInternet"
            android:layout_centerHorizontal="true"

            android:fontFamily="@font/montserrat_bold"
            android:text="@string/no_internet_connection"
            android:textSize="@dimen/_12ssp" />


        <TextView
            android:id="@+id/txtInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_above="@id/retryMain"
            android:layout_centerHorizontal="true"
             android:layout_marginBottom="@dimen/_50sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/please_connect_to_internet"
            android:textSize="@dimen/_12ssp" />

        <Button
            android:id="@+id/retryMain"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/stroke_solid_btn"
            android:elevation="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingHorizontal="@dimen/_30sdp"
            android:text="@string/retry"
            android:textColor="#de4500"
            android:textSize="@dimen/_12ssp" />


    </RelativeLayout>


</RelativeLayout>
