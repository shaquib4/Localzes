<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reddish"
    tools:context=".MainActivity">



    <EditText
        android:id="@+id/edtmobile"
        android:inputType="phone"
        android:maxLength="10"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="300dp"
        android:background="@drawable/ic_mobile"
      android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/_30sdp"
        android:hint="@string/mobile_number"
        android:textColor="#ffffff"
        android:maxLines="1"
        android:textColorHint="#ffffff"

        />
    <Button
        android:layout_below="@+id/edtmobile"
        android:id="@+id/btnRegButton"
        android:layout_width="226dp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:padding="7dp"
        android:textAllCaps="false"
        android:background="@drawable/round_button"
        android:text="Login | Sign Up"
        android:textStyle="bold"
        android:fontFamily="@font/l_r"
        android:textSize="20sp"
        android:textColor="#DE0606"/>

    <ImageView
        android:id="@+id/localze"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_localze"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
