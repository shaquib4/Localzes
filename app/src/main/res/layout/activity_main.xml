<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".MainActivity">



        <EditText
            android:id="@+id/edtmobile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_above="@id/btnRegButton"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/stroke"
            android:fontFamily="@font/montserrat_medium"
            android:hint="@string/mobile_number"
            android:inputType="phone"
            android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
            android:maxLength="10"
            android:paddingHorizontal="@dimen/_10sdp"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="@dimen/_12ssp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtmobile"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Login or Sign Up with your Mobile number"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/_13ssp" />

    <Button
        android:id="@+id/btnRegButton"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_100sdp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/l_r"
        android:padding="7dp"
        android:text="Login | Sign Up"
        android:textAllCaps="false"
        android:textColor="#DE0606"
        android:textSize="@dimen/_12ssp" />


</RelativeLayout>
