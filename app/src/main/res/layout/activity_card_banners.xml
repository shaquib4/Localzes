<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".cardBanners">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">



        </RelativeLayout>




        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="@drawable/border">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Boost Your Shop"
             android:layout_marginTop="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_15sdp"
                android:textColor="#fff"
                android:textSize="@dimen/_18ssp" />
        </RelativeLayout>


        <View
            android:id="@+id/viewCenter"
            android:layout_width="1dp"
            android:layout_height="match_parent"

            android:layout_centerHorizontal="true" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_150sdp"
            android:id="@+id/card1"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_160sdp"

            android:layout_marginHorizontal="@dimen/_10sdp"

            android:layout_toLeftOf="@id/viewCenter"
            android:backgroundTint=""
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:background="#008000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/disk_circle"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/share"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share Your Shop"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_15ssp"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_20sdp"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_below="@id/card1"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_toLeftOf="@id/viewCenter"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:background="#f156"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/qr_scan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate QR code"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_15ssp"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_30sdp"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_below="@id/card2"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_toLeftOf="@id/viewCenter"
            app:cardCornerRadius="10dp">

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_150sdp"
            android:id="@+id/card4"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_160sdp"

            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_toRightOf="@id/viewCenter"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:background="#f15642"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/disk_circle"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/pdf"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Banner"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_15ssp"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_30sdp"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_below="@id/card1"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_toRightOf="@id/viewCenter"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:background="#ffce44"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/send"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan QR code"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_15ssp"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_30sdp"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card6"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_below="@id/card2"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_toRightOf="@id/viewCenter"
            app:cardCornerRadius="10dp">

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>