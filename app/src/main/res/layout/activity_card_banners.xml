<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".cardBanners">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">






        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            android:background="@drawable/border">
       <ImageView
           android:layout_alignLeft="@+id/txtBYS"
           android:layout_width="@dimen/_160sdp"
           android:layout_height="@dimen/_120sdp"
           android:scaleType="fitXY"
           android:src="@drawable/shop_png"/>

            <TextView
                android:id="@+id/txtBYS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Boost Your Shop"
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:textColor="#fff"
                android:textSize="@dimen/_25ssp" />
        </RelativeLayout>


        <View
            android:id="@+id/viewCenter"
            android:layout_width="1dp"
            android:layout_height="match_parent"

            android:layout_centerHorizontal="true" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_135sdp"
            android:id="@+id/cardShare"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_160sdp"

            android:layout_marginHorizontal="@dimen/_10sdp"

            android:layout_toLeftOf="@id/viewCenter"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:background="#008000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/disk_circle"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/share"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share Your Shop"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_15ssp"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_20sdp"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardQR"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_below="@id/cardShare"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_toLeftOf="@id/viewCenter"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:background="#f156"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/qr_scan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate QR code"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_15ssp"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_30sdp"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_135sdp"
            android:id="@+id/cardBanner"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_160sdp"

            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_toRightOf="@id/viewCenter"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:background="#f15642"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/disk_circle"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/pdf"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Banner"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_15ssp"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_30sdp"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCatalogue"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_160sdp"
            android:layout_below="@id/cardShare"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_toRightOf="@id/viewCenter"
            app:cardCornerRadius="10dp">
            <RelativeLayout
                android:background="#ffce44"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/overview"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Overview"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_15ssp"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_30sdp"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>



    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navOrders_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        app:menu="@menu/seller_menu" />


</RelativeLayout>