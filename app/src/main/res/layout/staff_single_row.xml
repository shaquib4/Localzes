<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <TextView
                android:id="@+id/txtStaffNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/StaffName"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/imgStaff"
                android:fontFamily="@font/montserrat_medium"
                android:text="Mobile No. :"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txtStaffAccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtStaffNumber"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/imgStaff"
                android:fontFamily="@font/montserrat_medium"
                android:text="Access :"
                android:textSize="@dimen/_10ssp" />

            <TextView

                android:id="@+id/StaffName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/imgStaff"
                android:fontFamily="@font/montserrat_bold"
                android:text="Katappa Mama"
                android:textColor="#de4500"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/StaffNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/StaffName"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/txtStaffNumber"
                android:fontFamily="@font/montserrat_medium"
                android:text="9876543210"
                android:textColor="#000"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/StaffAccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtStaffNumber"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/txtStaffAccess"
                android:fontFamily="@font/montserrat_bold"
                android:text="Full access"
                android:textColor="#008000"
                android:textSize="@dimen/_10ssp" />


            <ImageView
                android:id="@+id/imgStaff"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_margin="5dp"
                android:background="@drawable/stroke_primary"
                android:padding="1dp"
                android:src="@drawable/staff_single" />

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_alignTop="@id/StaffAccess"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/edit" />

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:src="@drawable/ic_remove" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>