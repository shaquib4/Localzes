<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18ssp"
        android:padding="10dp"
        android:text="Add To Cart"
        android:textColor="#000000"
        android:id="@+id/txtCart"/>
    <View
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#696969"
        android:layout_below="@+id/txtCart"
        android:id="@+id/border"/>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_below="@+id/border"
        android:id="@+id/cardProduct"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/Continue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:padding="2dp"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textSize="@dimen/_20ssp"
                    android:text="Nachos and dips"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Seller:Khan Baba"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:id="@+id/ProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs.1000"
                    android:textSize="@dimen/_15ssp" />
                <TextView
                    android:id="@+id/ProductFinalPrice"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:text="Rs.850"
                    android:textStyle="bold"
                    android:textColor="#de4500"
                    android:textSize="@dimen/_22ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ProductImage"
                    android:layout_width="match_parent"

                    android:layout_height="@dimen/_100sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/lanju" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_margin="5dp"
                    android:background="#a9a9a9"
                    android:orientation="horizontal"
                    android:weightSum="8">

                    <Button
                        android:id="@+id/btnIncrease"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.4"
                        android:background="@drawable/add_item_increase"
                        android:onClick="countIn"
                        android:text="+"
                        android:textColor="#de4500"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtCounter"
                        android:layout_width="0dp"
                        android:background="#fcfcfc"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="@dimen/_15ssp"
                        android:text="1"
                        android:textColor="#de4500"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnDecrease"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.4"
                        android:background="@drawable/add_item_decrease"
                        android:onClick="countDe"
                        android:text="-"
                        android:textColor="#696969"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btncontinue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="#de4500"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@id/cardProduct"
        android:text="Add To Cart"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textSize="@dimen/_15ssp"/>
</RelativeLayout>