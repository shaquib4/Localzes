<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_product_shop"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/cardImage"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgShop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:scaleType="centerCrop"

                android:src="@drawable/lanju" />
            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/txtShop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardImage"
                android:layout_marginStart="10dp"
                android:text="Khan Shops"
                android:fontFamily="@font/montserrat_medium"

                android:textColor="#000"
                android:textSize="@dimen/_15ssp" />



            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtShop_name"
                android:layout_marginStart="10dp"
                android:text="Foods"
                android:textSize="@dimen/_13ssp"
               android:fontFamily="@font/montserrat_medium" />

            <ImageView
                android:id="@+id/imgRating_customer"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginTop="12dp"
                android:layout_below="@id/cardImage"
                android:layout_toLeftOf="@+id/txtRatingShop_customer"
                android:src="@drawable/ic_rating" />

            <TextView
                android:id="@+id/txtRatingShop_customer"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginTop="5dp"
                android:layout_alignTop="@+id/txtShop_name"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:text="4.5/5"

                android:fontFamily="@font/montserrat_bold"
                android:textColor="#de4500"
                android:textSize="@dimen/_11ssp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignLeft="@+id/txtCategory"
                android:text="8:00 am to 9:00 pm"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#de4500"
                android:textSize="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_below="@+id/txtCategory"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    
</RelativeLayout>

