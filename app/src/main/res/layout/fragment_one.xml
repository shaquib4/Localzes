<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SHOP">
    <RelativeLayout  xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_shop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_235sdp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_product_shop"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgShop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:scaleType="centerCrop"

                    android:src="@drawable/lanju" />

                <View
                    android:id="@+id/view_customer"
                    android:layout_width="match_parent"
                    android:layout_height="1.3dp"
                    android:layout_below="@+id/imgShop"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:background="#eaeaea"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginBottom="7dp"
                    />


                <TextView
                    android:id="@+id/txtShop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_customer"
                    android:layout_marginStart="10dp"
                    android:text="Khan Shops"
                    android:fontFamily="@font/montserrat_medium"

                    android:textColor="#000"
                    android:textSize="@dimen/_13ssp" />



                <TextView
                    android:id="@+id/txtCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtShop_name"
                    android:layout_marginStart="10dp"
                    android:text="Foods"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/montserrat_medium" />

                <ImageView
                    android:id="@+id/imgRating_customer"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@id/imgShop"
                    android:layout_toLeftOf="@+id/txtRatingShop_customer"
                    android:src="@drawable/ic_rating" />

                <TextView
                    android:id="@+id/txtRatingShop_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="5dp"
                    android:layout_alignTop="@+id/txtShop_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:text="4.5/5"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="#de4500"
                    android:textSize="@dimen/_11ssp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_alignLeft="@+id/txtCategory"
                    android:text="8:00 am to 9:00 pm"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="#de4500"
                    android:textSize="@dimen/_10ssp"
                    android:layout_below="@+id/txtCategory"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</FrameLayout>